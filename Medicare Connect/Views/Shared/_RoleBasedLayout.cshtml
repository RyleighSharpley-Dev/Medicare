@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Medicare Connect";
    var areaName = ViewContext.RouteData.Values["area"]?.ToString() ?? "";
    var areaClass = !string.IsNullOrEmpty(areaName) ? $"{areaName.ToLowerInvariant()}-area" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Medicare Connect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Medicare_Connect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar-custom {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 0.75rem 1rem;
        }

            .navbar-custom .nav-link {
                color: #fff !important;
                margin-right: 1rem;
                transition: background 0.2s ease;
                border-radius: 0.375rem;
                padding: 0.5rem 0.75rem;
            }

                .navbar-custom .nav-link:hover,
                .navbar-custom .nav-link.active {
                    background: rgba(255, 255, 255, 0.2);
                }

        /* Role-specific colors */
        .patients-area .navbar-custom {
            background: #0d6efd;
        }

        .doctors-area .navbar-custom {
            background: #198754;
        }

        .nurses-area .navbar-custom {
            background: #dc3545;
        }

        .pharmacists-area .navbar-custom {
            background: #fd7e14;
        }

        .administrativestaff-area .navbar-custom {
            background: #6610f2;
        }

        .managers-area .navbar-custom {
            background: #212529;
        }

        /* Main content */
        .main-content {
            padding: 1.5rem;
        }
    </style>
    @RenderSection("Styles", required: false)
    @await RenderSectionAsync("Head", required: false)
</head>
<body class="@areaClass">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Medicare Connect
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#roleNavbar" aria-controls="roleNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="roleNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @RenderSection("Sidebar", required: true)   <!-- role-based links now appear here -->
                    </ul>
                    <div class="d-flex">
                        <partial name="/Views/Shared/_LoginPartial.cshtml" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content container-fluid">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
