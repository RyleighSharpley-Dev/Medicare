@model Medicare_Connect.Areas.Patients.Models.PaymentHistoryViewModel
@{
    ViewData["Title"] = "Payment History";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Payment History</h2>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Billing
                    </a>
                </div>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Summary Stats -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="rounded-circle bg-info bg-opacity-10 d-inline-flex p-3 mb-3">
                                <i class="bi bi-credit-card text-info fs-4"></i>
                            </div>
                            <h4 class="card-title">Total Payments</h4>
                            <h3 class="text-info mb-0">@Model.Payments.Count</h3>
                            <small class="text-muted">Payment records</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex p-3 mb-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                            <h4 class="card-title">Successful</h4>
                            <h3 class="text-success mb-0">@Model.Payments.Count(p => p.Status == "Completed")</h3>
                            <small class="text-muted">Completed payments</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex p-3 mb-3">
                                <i class="bi bi-clock text-warning fs-4"></i>
                            </div>
                            <h4 class="card-title">Pending</h4>
                            <h3 class="text-warning mb-0">@Model.Payments.Count(p => p.Status == "Pending")</h3>
                            <small class="text-muted">Awaiting completion</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history text-info"></i> 
                        Complete Payment History
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Payments.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-credit-card text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No payment records found.</p>
                            <p class="text-muted">Payment records will appear here when you make payments.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Payment Type</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Reference</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-info">@payment.PaymentType</span>
                                            </td>
                                            <td>
                                                <span class="fw-medium">@payment.Description</span>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">@payment.Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</span>
                                            </td>
                                            <td>
                                                @if (payment.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> @payment.Status
                                                    </span>
                                                }
                                                else if (payment.Status == "Failed")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> @payment.Status
                                                    </span>
                                                }
                                                else if (payment.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-clock"></i> @payment.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@payment.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">@payment.CreatedAt.ToString("MMM dd, yyyy")</div>
                                                    <small class="text-muted">@payment.CreatedAt.ToString("HH:mm")</small>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(payment.ReferenceId))
                                                {
                                                    <code class="small">@payment.ReferenceId</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(payment.Notes))
                                                {
                                                    <small class="text-muted">@payment.Notes</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Payment Summary -->
                        <div class="mt-4 p-3 bg-light rounded">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="mb-3">
                                        <i class="bi bi-calculator text-primary"></i> Payment Summary
                                    </h6>
                                    <ul class="list-unstyled">
                                        <li><strong>Total Payments:</strong> @Model.Payments.Count</li>
                                        <li><strong>Successful:</strong> @Model.Payments.Count(p => p.Status == "Completed")</li>
                                        <li><strong>Pending:</strong> @Model.Payments.Count(p => p.Status == "Pending")</li>
                                        <li><strong>Failed:</strong> @Model.Payments.Count(p => p.Status == "Failed")</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="mb-3">
                                        <i class="bi bi-info-circle text-info"></i> Payment Types
                                    </h6>
                                    <ul class="list-unstyled">
                                        @foreach (var paymentType in Model.Payments.Select(p => p.PaymentType).Distinct())
                                        {
                                            var count = Model.Payments.Count(p => p.PaymentType == paymentType);
                                            <li><strong>@paymentType:</strong> @count payment(s)</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 