@using System.Security.Claims
@{
    // Reuse the same profile logic for consistency if needed in navbar (e.g., for user name)
    var fullNameClaim = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value;
    var displayName = !string.IsNullOrWhiteSpace(fullNameClaim) ? fullNameClaim : (User.Identity?.Name ?? "");
}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <span class="navbar-brand mb-0 h5 text-white d-none d-lg-block">@displayName</span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#patientNavbar" aria-controls="patientNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="patientNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant() == "dashboard" ? "active" : "")"
                       asp-area="Patients" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant() == "profile" ? "active" : "")"
                       asp-area="Patients" asp-controller="Profile" asp-action="Index">
                        <i class="bi bi-person"></i> Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant() == "appointments" ? "active" : "")"
                       asp-area="Patients" asp-controller="Appointments" asp-action="Index">
                        <i class="bi bi-calendar-check"></i> Appointments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant() == "records" ? "active" : "")"
                       asp-area="Patients" asp-controller="Records" asp-action="Index">
                        <i class="bi bi-journal-medical"></i> Records
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant() == "prescriptions" ? "active" : "")"
                       asp-area="Patients" asp-controller="Prescriptions" asp-action="Index">
                        <i class="bi bi-prescription2"></i> Prescriptions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant() == "payments" ? "active" : "")"
                       asp-area="Patients" asp-controller="Payments" asp-action="Index">
                        <i class="bi bi-credit-card"></i> Payments
