@model Medicare_Connect.Areas.Patients.Models.AppointmentEditModel
@{
    ViewData["Title"] = "Reschedule Appointment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Reschedule Appointment</h1>
            <p class="text-muted mb-0">Update your appointment details</p>
        </div>
        <div>
            <a class="btn btn-outline-primary" asp-action="Index"><i class="bi bi-arrow-left me-2"></i>Back to Appointments</a>
        </div>
    </div>

    <div class="card dashboard-card border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="AppointmentDate" class="form-label"></label>
                        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="AppointmentType" class="form-label"></label>
                        <select asp-for="AppointmentType" class="form-select">
                            <option>General Checkup</option>
                            <option>Follow-up</option>
                            <option>Lab Results</option>
                            <option>Vaccination</option>
                        </select>
                        <span asp-validation-for="AppointmentType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DoctorName" class="form-label"></label>
                        <select asp-for="DoctorName" class="form-select">
                            <option>Dr. Thandeka Khumalo</option>
                            <option>Dr. Sibusiso Nene</option>
                            <option>Dr. Zandile Mthembu</option>
                        </select>
                        <span asp-validation-for="DoctorName" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-save me-2"></i>Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div> 