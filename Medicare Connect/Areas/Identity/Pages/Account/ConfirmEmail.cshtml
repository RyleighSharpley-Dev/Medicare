@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 p-md-5 text-center" style="max-width: 500px; width: 100%;">
        <h1 class="h3 fw-bold mb-3">@ViewData["Title"]</h1>

        <div class="alert alert-info rounded-3 mt-3">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
        </div>

        <a asp-page="./Login" class="btn btn-primary btn-lg w-100 rounded-pill mt-3">
            Go to Login
        </a>
    </div>
</div>
