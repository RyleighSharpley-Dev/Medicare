@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    ViewData["BodyClass"] = "login-page";
}

<div class="login-wrapper d-flex flex-column flex-lg-row min-vh-100">
    <!-- Brand Side -->
    <div class="brand-panel d-none d-lg-flex flex-column justify-content-between p-5 text-white">
        <div>
            <h2 class="fw-bold display-6">Medicare Connect</h2>
            <p class="lead opacity-75">Where healthcare meets innovation.</p>
        </div>
        <div>
            <h4 class="fw-semibold">Healthcare made simple.</h4>
            <p class="opacity-75">Seamless care in one secure digital space.</p>
        </div>
        <div class="small opacity-50">© @DateTime.Now.Year Medicare</div>
    </div>

    <!-- Form Side -->
    <div class="form-panel d-flex flex-grow-1 align-items-center justify-content-center p-4">
        <div class="login-card shadow-lg bg-white rounded-4 p-4 p-lg-5 w-100" style="max-width: 420px;">
            <div class="text-center mb-4">
                <div class="icon-circle bg-primary text-white mb-3">
                    <i class="bi bi-shield-lock-fill fs-3"></i>
                </div>
                <h1 class="h3 fw-bold">Welcome back</h1>
                <p class="text-muted">Log in to continue to Medicare Connect</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                    <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill" autocomplete="username" placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                        <a class="small text-primary fw-semibold" asp-page="./ForgotPassword">Forgot password?</a>
                    </div>
                    <div class="input-group input-group-lg">
                        <input asp-for="Input.Password" class="form-control rounded-start-pill" autocomplete="current-password" placeholder="Enter password" />
                        <button type="button" class="btn btn-outline-secondary rounded-end-pill" id="togglePassword" aria-label="Show password">Show</button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Remember Me -->
                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>

                <!-- Submit -->
                <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                    Log in
                </button>

                <!-- Divider -->
                <div class="text-center text-muted mt-4">or</div>

                <!-- Create Account -->
                <div class="d-grid gap-2 mt-3">
                    <a class="btn btn-outline-secondary btn-lg rounded-pill" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Create an account
                    </a>
                </div>

                <input type="hidden" asp-for="ReturnUrl" />
            </form>
        </div>
    </div>
</div>

<style>
    /* Brand Panel */
    .brand-panel {
        flex: 1;
        background: linear-gradient(135deg, #0d6efd 0%, #4dabf7 100%);
        border-top-right-radius: 2rem;
        border-bottom-right-radius: 2rem;
    }

    /* Form Panel */
    .form-panel {
        background: #f8f9fa;
    }

    .login-card {
        border: 1px solid #e9ecef;
    }

    /* Icon Badge */
    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    /* Inputs */
    .form-control {
        padding: 0.9rem 1rem;
        border: 1px solid #dee2e6;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.15);
        }

    .btn-primary {
        background: linear-gradient(90deg, #0d6efd, #4dabf7);
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0b5ed7, #339af0);
        }

    @@media (max-width: 768px) {
        .brand-panel

    {
        display: none !important;
    }

    .form-panel {
        background: #fff;
    }

    .login-card {
        box-shadow: none;
        border-radius: 1rem;
    }

    }</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const toggle = document.getElementById('togglePassword');
            if (!toggle) return;
            toggle.addEventListener('click', function () {
                const input = document.getElementById('Input_Password');
                if (!input) return;
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                this.textContent = isPassword ? 'Hide' : 'Show';
            });
        })();
    </script>
}
