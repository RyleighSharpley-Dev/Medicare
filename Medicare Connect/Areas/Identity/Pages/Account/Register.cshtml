@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "login-page";
}

<div class="register-wrapper d-flex flex-column flex-lg-row min-vh-100">
    <!-- Left Brand Panel -->
    <div class="brand-panel d-none d-lg-flex flex-column justify-content-between p-5 text-white">
        <div>
            <h2 class="fw-bold display-6">Medicare Connect</h2>
            <p class="lead opacity-75">Where healthcare meets innovation.</p>
        </div>
        <div>
            <h4 class="fw-semibold">Your health, simplified.</h4>
            <p class="opacity-75">Join today to access secure, connected care with doctors, patients, and providers in one digital hub.</p>
        </div>
        <div class="small opacity-50">© @DateTime.Now.Year Medicare</div>
    </div>

    <!-- Right Form Panel -->
    <div class="form-panel d-flex flex-grow-1 align-items-center justify-content-center p-4">
        <div class="register-card shadow-lg bg-white rounded-4 p-4 p-lg-5 w-100" style="max-width: 480px;">
            <div class="text-center mb-4">
                <div class="icon-circle bg-primary text-white mb-3">
                    <i class="bi bi-heart-pulse-fill fs-3"></i>
                </div>
                <h1 class="h3 fw-bold">Create your account</h1>
                <p class="text-muted">It’s quick and easy.</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                    <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill" autocomplete="username" placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                    <div class="input-group input-group-lg">
                        <input asp-for="Input.Password" class="form-control rounded-start-pill" autocomplete="new-password" placeholder="Enter password" />
                        <button type="button" class="btn btn-outline-secondary rounded-end-pill" id="togglePassword" aria-label="Show password">Show</button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold"></label>
                    <div class="input-group input-group-lg">
                        <input asp-for="Input.ConfirmPassword" class="form-control rounded-start-pill" autocomplete="new-password" placeholder="Re-enter password" />
                        <button type="button" class="btn btn-outline-secondary rounded-end-pill" id="toggleConfirm" aria-label="Show password">Show</button>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Submit -->
                <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                    Create account
                </button>

                <div class="text-center text-muted mt-4">
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-primary">
                        Log in
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Brand panel with gradient */
    .brand-panel {
        flex: 1;
        background: linear-gradient(135deg, #0d6efd 0%, #4dabf7 100%);
        border-top-right-radius: 2rem;
        border-bottom-right-radius: 2rem;
    }

    /* Form panel */
    .form-panel {
        background: #f8f9fa;
    }

    .register-card {
        border: 1px solid #e9ecef;
    }

    /* Icon circle */
    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    /* Inputs */
    .form-control {
        padding: 0.9rem 1rem;
        border: 1px solid #dee2e6;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.15);
        }

    .btn-primary {
        background: linear-gradient(90deg, #0d6efd, #4dabf7);
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0b5ed7, #339af0);
        }

    /* Mobile adjustments */
    @@media (max-width: 768px) {
        .brand-panel

    {
        display: none !important;
    }

    .form-panel {
        background: #fff;
    }

    .register-card {
        box-shadow: none;
        border-radius: 1rem;
    }

    }</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const toggle = document.getElementById('togglePassword');
            const toggle2 = document.getElementById('toggleConfirm');

            if (toggle) toggle.addEventListener('click', function () {
                const input = document.getElementById('Input_Password');
                if (!input) return;
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                this.textContent = isPassword ? 'Hide' : 'Show';
            });

            if (toggle2) toggle2.addEventListener('click', function () {
                const input = document.getElementById('Input_ConfirmPassword');
                if (!input) return;
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                this.textContent = isPassword ? 'Hide' : 'Show';
            });
        })();
    </script>
}
