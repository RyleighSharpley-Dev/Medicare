@{
    ViewData["Title"] = "Triage";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Patient Triage</h2>
                <div class="d-flex gap-2">
                    <button class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> New Triage
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-triangle"></i> Emergency (Red)
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="bi bi-people text-danger" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">No emergency patients</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-clock"></i> Urgent (Yellow)
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="bi bi-people text-warning" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">No urgent patients</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-check-circle"></i> Non-Urgent (Green)
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="bi bi-people text-success" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">No non-urgent patients</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Triage Guidelines</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6 class="text-danger">Emergency (Red)</h6>
                            <ul class="list-unstyled">
                                <li>• Cardiac arrest</li>
                                <li>• Severe bleeding</li>
                                <li>• Unconsciousness</li>
                                <li>• Severe trauma</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-warning">Urgent (Yellow)</h6>
                            <ul class="list-unstyled">
                                <li>• Moderate pain</li>
                                <li>• Stable fractures</li>
                                <li>• High fever</li>
                                <li>• Dehydration</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-success">Non-Urgent (Green)</h6>
                            <ul class="list-unstyled">
                                <li>• Minor cuts</li>
                                <li>• Routine check-ups</li>
                                <li>• Prescription refills</li>
                                <li>• Minor complaints</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 