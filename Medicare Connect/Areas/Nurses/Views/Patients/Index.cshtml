@model List<Medicare_Connect.Areas.Nurses.Models.PatientListItem>
@{
    ViewData["Title"] = "Patients";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Patient Management</h2>
                <div class="d-flex gap-2">
                    <form method="get" class="d-flex gap-2">
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" 
                               class="form-control" placeholder="Search patients..." />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </form>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Patient List</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No patients found.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Email</th>
                                        <th>Last Visit</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 40px; height: 40px;">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@patient.Name</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@patient.Email</td>
                                            <td>
                                                @if (patient.LastVisit.HasValue)
                                                {
                                                    <span class="text-muted">@patient.LastVisit.Value.ToString("MMM dd, yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No visits</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@patient.Status</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Care", new { patientKey = patient.PatientKey })" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-heart-pulse"></i> Care
                                                    </a>
                                                    <a href="@Url.Action("Index", "Records", new { area = "Doctors", patientKey = patient.PatientKey })" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="bi bi-journal-medical"></i> Records
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                Showing @Model.Count patient(s)
                                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                {
                                    <span>for "@ViewBag.SearchTerm"</span>
                                }
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 