@model dynamic
@{
    ViewData["Title"] = "Admin Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Admin Profile</h2>
                <a href="@Url.Action("Edit")" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto" 
                                     style="width: 150px; height: 150px;">
                                    <i class="bi bi-person-badge" style="font-size: 4rem;"></i>
                                </div>
                            </div>
                            <h4 class="card-title">@Model.FullName</h4>
                            <p class="text-muted">@Model.Position</p>
                            <p class="text-muted">Employee ID: @Model.EmployeeId</p>
                            <hr>
                            <div class="d-grid">
                                <a href="@Url.Action("Edit")" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit Profile
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">Contact Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <small class="text-muted">Email</small><br>
                                <strong>@Model.Email</strong>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">Phone</small><br>
                                <strong>@Model.PhoneNumber</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Professional Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Department</label>
                                    <input type="text" class="form-control" value="@Model.Department" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Position</label>
                                    <input type="text" class="form-control" value="@Model.Position" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Employee ID</label>
                                    <input type="text" class="form-control" value="@Model.EmployeeId" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Hire Date</label>
                                    <input type="text" class="form-control" value="@Model.HireDate" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Supervisor</label>
                                    <input type="text" class="form-control" value="@Model.Supervisor" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Office Location</label>
                                    <input type="text" class="form-control" value="@Model.OfficeLocation" readonly />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Work Schedule</label>
                                <input type="text" class="form-control" value="@Model.WorkSchedule" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("Index", "Patients", new { area = "AdministrativeStaff" })" class="btn btn-outline-primary w-100">
                                        <i class="bi bi-people"></i> Manage Patients
                                    </a>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("Index", "Appointments", new { area = "AdministrativeStaff" })" class="btn btn-outline-success w-100">
                                        <i class="bi bi-calendar-check"></i> Manage Appointments
                                    </a>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("Index", "Billing", new { area = "AdministrativeStaff" })" class="btn btn-outline-warning w-100">
                                        <i class="bi bi-receipt"></i> Manage Billing
                                    </a>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("Index", "Reports", new { area = "AdministrativeStaff" })" class="btn btn-outline-info w-100">
                                        <i class="bi bi-file-earmark-text"></i> View Reports
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 