@model List<object>
@{
    ViewData["Title"] = "Patient Support";
}

<!-- Main Wrapper -->
<div class="container-fluid py-5" style="background-color: #f8f9fa; min-height: 100vh;">
    <div class="container p-4" style="background-color: #fff; border-radius: 16px; box-shadow: 0 6px 18px rgba(0,0,0,0.08);">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
            <div>
                <h2 class="fw-bold mb-1">Patient Support</h2>
                <p class="text-muted mb-0">Manage and track patient support tickets</p>
            </div>
            <a href="@Url.Action("Create")" class="btn btn-primary shadow-sm rounded-pill px-4">
                <i class="bi bi-plus-circle me-1"></i> New Ticket
            </a>
        </div>

        <!-- Card -->
        <div class="card border-0 shadow-sm" style="border-radius: 14px; overflow: hidden;">
            <div class="card-header bg-light border-0 py-3">
                <h5 class="mb-0 fw-semibold text-secondary">Support Tickets</h5>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-headset text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3 mb-3">No support tickets found.</p>
                        <a href="@Url.Action("Create")" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-plus-circle"></i> Create First Ticket
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Ticket ID</th>
                                    <th scope="col">Patient</th>
                                    <th scope="col">Subject</th>
                                    <th scope="col">Priority</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Created</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (dynamic ticket in Model)
                                {
                                    <tr class="align-middle">
                                        <td>
                                            <span class="badge bg-secondary rounded-pill px-3 py-2">#@ticket.Id</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3 shadow-sm"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person"></i>
                                                </div>
                                                <div>
                                                    <strong>@ticket.PatientName</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="fw-semibold">@ticket.Subject</td>
                                        <td>
                                            @if (ticket.Priority == "High")
                                            {
                                                <span class="badge bg-danger rounded-pill px-3">@ticket.Priority</span>
                                            }
                                            else if (ticket.Priority == "Medium")
                                            {
                                                <span class="badge bg-warning text-dark rounded-pill px-3">@ticket.Priority</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success rounded-pill px-3">@ticket.Priority</span>
                                            }
                                        </td>
                                        <td>
                                            @if (ticket.Status == "Open")
                                            {
                                                <span class="badge bg-primary rounded-pill px-3">@ticket.Status</span>
                                            }
                                            else if (ticket.Status == "In Progress")
                                            {
                                                <span class="badge bg-warning text-dark rounded-pill px-3">@ticket.Status</span>
                                            }
                                            else if (ticket.Status == "Resolved")
                                            {
                                                <span class="badge bg-success rounded-pill px-3">@ticket.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary rounded-pill px-3">@ticket.Status</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@ticket.CreatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                               
                                                <a href="@Url.Action("Create", new { id = ticket.Id })" class="btn btn-sm btn-outline-warning rounded-pill px-3">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                
                                              
                                            </div>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 text-end">
                        <small class="text-muted">Showing <strong>@Model.Count</strong> ticket(s)</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
