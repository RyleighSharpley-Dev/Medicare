@model Medicare_Connect.Areas.AdministrativeStaff.Models.BillingViewModel
@{
    ViewData["Title"] = "Edit Billing Record";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Edit Billing Record</h2>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Details", new { id = ViewBag.BillingId })" class="btn btn-outline-info">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Billing
                    </a>
                </div>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Billing Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="id" value="@ViewBag.BillingId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientId" class="form-label">Patient</label>
                                    <select asp-for="PatientId" class="form-select" required>
                                        <option value="">Select Patient</option>
                                        @foreach (var patient in ViewBag.Patients)
                                        {
                                            <option value="@patient.Id" selected="@(patient.Id == Model.PatientId)">
                                                @patient.Name
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ServiceType" class="form-label">Service Type</label>
                                    <input asp-for="ServiceType" class="form-control" placeholder="e.g., General Checkup, Lab Test" required />
                                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ServiceDate" class="form-label">Service Date</label>
                                    <input asp-for="ServiceDate" class="form-control" type="date" required />
                                    <span asp-validation-for="ServiceDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DueDate" class="form-label">Due Date</label>
                                    <input asp-for="DueDate" class="form-control" type="date" required />
                                    <span asp-validation-for="DueDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Amount" class="form-label">Total Amount (ZAR)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R</span>
                                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" max="10000.00" required />
                                    </div>
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                    <small class="form-text text-muted">Enter amount in Rand (0.01 - 10,000.00)</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="InsuranceCoverage" class="form-check-input" type="checkbox" id="insuranceCheckbox" />
                                        <label class="form-check-label" for="insuranceCheckbox">
                                            Insurance Coverage
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="InsuranceAmount" class="form-label">Insurance Amount (ZAR)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R</span>
                                        <input asp-for="InsuranceAmount" class="form-control" type="number" step="0.01" min="0.00" max="10000.00" disabled />
                                    </div>
                                    <span asp-validation-for="InsuranceAmount" class="text-danger"></span>
                                    <small class="form-text text-muted">Amount covered by insurance</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientResponsibility" class="form-label">Patient Responsibility (ZAR)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R</span>
                                        <input asp-for="PatientResponsibility" class="form-control" type="number" step="0.01" min="0.00" max="10000.00" readonly />
                                    </div>
                                    <span asp-validation-for="PatientResponsibility" class="text-danger"></span>
                                    <small class="form-text text-muted">Automatically calculated</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PaymentStatus" class="form-label">Payment Status</label>
                                    <select asp-for="PaymentStatus" class="form-select" required>
                                        <option value="Pending" selected="@(Model.PaymentStatus == "Pending")">Pending</option>
                                        <option value="Paid" selected="@(Model.PaymentStatus == "Paid")">Paid</option>
                                        <option value="Partial" selected="@(Model.PaymentStatus == "Partial")">Partial</option>
                                        <option value="Overdue" selected="@(Model.PaymentStatus == "Overdue")">Overdue</option>
                                        <option value="Cancelled" selected="@(Model.PaymentStatus == "Cancelled")">Cancelled</option>
                                    </select>
                                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes about this billing record..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                            <small class="form-text text-muted">Optional notes (max 500 characters)</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-danger" onclick="deleteBillingRecord()">
                                <i class="bi bi-trash"></i> Delete Record
                            </button>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Details", new { id = ViewBag.BillingId })" class="btn btn-outline-secondary">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update Billing Record
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enable/disable insurance amount field based on checkbox
        document.getElementById('insuranceCheckbox').addEventListener('change', function() {
            const insuranceAmountField = document.getElementById('InsuranceAmount');
            insuranceAmountField.disabled = !this.checked;
            
            if (!this.checked) {
                insuranceAmountField.value = '';
            }
            
            calculatePatientResponsibility();
        });

        // Calculate patient responsibility when amount or insurance changes
        document.getElementById('Amount').addEventListener('input', calculatePatientResponsibility);
        document.getElementById('InsuranceAmount').addEventListener('input', calculatePatientResponsibility);

        function calculatePatientResponsibility() {
            const amount = parseFloat(document.getElementById('Amount').value) || 0;
            const insuranceAmount = parseFloat(document.getElementById('InsuranceAmount').value) || 0;
            const insuranceCoverage = document.getElementById('insuranceCheckbox').checked;
            
            let patientResponsibility = amount;
            if (insuranceCoverage && insuranceAmount > 0) {
                patientResponsibility = amount - insuranceAmount;
            }
            
            document.getElementById('PatientResponsibility').value = patientResponsibility.toFixed(2);
        }

        function deleteBillingRecord() {
            if (confirm('Are you sure you want to delete this billing record? This action cannot be undone.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete")';
                
                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '__RequestVerificationToken';
                csrfInput.value = csrfToken;
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = '@ViewBag.BillingId';
                
                form.appendChild(csrfInput);
                form.appendChild(idInput);
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Initialize calculation on page load
        document.addEventListener('DOMContentLoaded', function() {
            calculatePatientResponsibility();
        });
    </script>
} 