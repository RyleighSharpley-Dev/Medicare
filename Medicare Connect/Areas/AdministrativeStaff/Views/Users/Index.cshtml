@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.UserListItem>
@{
    ViewData["Title"] = "User Management";
}

@section Styles {
    <style>
        body {
            background: #f8f9fc;
        }

        .page-header {
            background: #ffffff;
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
        }

            .page-header h1 {
                font-weight: 700;
                font-size: 1.75rem;
                color: #1e293b;
                margin-bottom: 0.25rem;
            }

            .page-header p {
                color: #64748b;
                margin: 0;
            }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            border: none;
            font-weight: 600;
            border-radius: 10px;
            padding: 0.6rem 1.2rem;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(102, 126, 234, 0.35);
            }

        .card.dashboard-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
        }

        table thead {
            background: #f8fafc;
        }

            table thead th {
                font-size: 0.85rem;
                font-weight: 600;
                color: #475569;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                border-bottom: 1px solid #e2e8f0;
            }

        table tbody td {
            vertical-align: middle;
            color: #1e293b;
        }

        .badge {
            font-weight: 500;
            border-radius: 8px;
            padding: 0.35rem 0.65rem;
        }

        .btn-sm {
            border-radius: 8px;
            padding: 0.35rem 0.75rem;
            font-size: 0.8rem;
        }
    </style>
}

<div class="container-fluid">
    <!-- Header -->
    <div class="page-header d-flex justify-content-between align-items-center flex-wrap">
        <div>
            <h1>User Management</h1>
            <p>Create, edit, and manage user roles</p>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i> New User
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MsgError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["MsgError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Main Card -->
    <div class="card dashboard-card border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>User Id</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User.Email</td>
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        <span class="badge bg-light text-dark">@string.Join(", ", item.Roles)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td class="text-muted small">@item.User.Id</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.User.Id">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline ms-1" onsubmit="return confirm('Delete this user?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.User.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
