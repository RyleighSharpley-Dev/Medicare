@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.UserListItem>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">User Management</h1>
            <p class="text-muted mb-0">Create, edit, and manage user roles</p>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>New User</a>
        </div>
    </div>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MsgError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["MsgError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card dashboard-card border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Id</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User.Email</td>
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        <span class="badge bg-light text-dark">@string.Join(", ", item.Roles)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td class="text-muted small">@item.User.Id</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.User.Id">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline ms-1" onsubmit="return confirm('Delete this user?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.User.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 