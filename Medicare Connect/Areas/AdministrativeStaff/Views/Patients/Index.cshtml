@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.PatientListItem>
@{
    ViewData["Title"] = "Patient Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Patient Management</h2>
                <a href="@Url.Action("Register")" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Register New Patient
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Registered Patients</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No patients registered yet.</p>
                            <a href="@Url.Action("Register")" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Register First Patient
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Email</th>
                                        <th>Phone Number</th>
                                        <th>Registration Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 40px; height: 40px;">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@patient.Name</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@patient.Email</td>
                                            <td>@patient.PhoneNumber</td>
                                            <td>
                                                <span class="text-muted">@patient.RegistrationDate.ToString("MMM dd, yyyy")</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = patient.Id })" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                Showing @Model.Count patient(s)
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 