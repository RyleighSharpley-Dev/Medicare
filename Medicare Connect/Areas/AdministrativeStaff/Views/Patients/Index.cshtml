@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.PatientListItem>
@{
    ViewData["Title"] = "Patient Management";
}

@section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f8fafc;
            color: #1e293b;
            line-height: 1.6;
        }

        /* Main Container */
        .patient-container {
            width: 100%;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header Section */
        .page-header {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Modern Buttons */
        .btn-modern {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 0.875rem 1.75rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

            .btn-modern:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                color: white;
                text-decoration: none;
            }

        .btn-action {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            transition: all 0.2s ease;
            font-size: 0.875rem;
            border: 1px solid transparent;
        }

        .btn-view {
            background: #f0f9ff;
            color: #0369a1;
            border-color: #e0f2fe;
        }

            .btn-view:hover {
                background: #0369a1;
                color: white;
                text-decoration: none;
                transform: translateY(-1px);
            }

        .btn-edit {
            background: #fefce8;
            color: #a16207;
            border-color: #fef3c7;
        }

            .btn-edit:hover {
                background: #a16207;
                color: white;
                text-decoration: none;
                transform: translateY(-1px);
            }

        .btn-delete {
            background: #fef2f2;
            color: #dc2626;
            border-color: #fecaca;
        }

            .btn-delete:hover {
                background: #dc2626;
                color: white;
                text-decoration: none;
                transform: translateY(-1px);
            }

        /* Alert Styles */
        .alert {
            background: #dcfce7;
            border: 1px solid #bbf7d0;
            color: #166534;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .alert i {
                font-size: 1.25rem;
            }

            .alert .btn-close {
                background: none;
                border: none;
                color: #166534;
                opacity: 0.7;
                cursor: pointer;
                padding: 0;
                margin-left: auto;
            }

                .alert .btn-close:hover {
                    opacity: 1;
                }

        /* Main Card */
        .main-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            overflow: hidden;
        }

        .card-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            background: #f8fafc;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1e293b;
            margin: 0;
        }

        .card-body {
            padding: 0;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-icon {
            font-size: 4rem;
            color: #cbd5e1;
            margin-bottom: 1.5rem;
            display: block;
        }

        .empty-message {
            font-size: 1.125rem;
            margin-bottom: 2rem;
            color: #64748b;
        }

        /* Patient Table */
        .table {
            margin: 0;
            width: 100%;
        }

            .table thead {
                background: #f8fafc;
            }

                .table thead th {
                    padding: 1.25rem 1.5rem;
                    font-weight: 600;
                    color: #475569;
                    font-size: 0.875rem;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    border: none;
                    border-bottom: 1px solid #e2e8f0;
                }

            .table tbody td {
                padding: 1.25rem 1.5rem;
                color: #1e293b;
                border-top: 1px solid #e2e8f0;
                vertical-align: middle;
            }

            .table tbody tr:hover {
                background: #f8fafc;
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

        /* Patient Avatar */
        .patient-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            margin-right: 1rem;
            flex-shrink: 0;
        }

        .patient-info {
            display: flex;
            align-items: center;
        }

        .patient-name {
            font-weight: 600;
            color: #1e293b;
            margin: 0;
        }

        /* Action Buttons Group */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        /* Footer Info */
        .table-footer {
            padding: 1rem 1.5rem;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
            color: #64748b;
            font-size: 0.875rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 1024px) {
            .patient-container

        {
            padding: 1.5rem;
        }

        }

        @@media (max-width: 768px) {
            .patient-container

        {
            padding: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            flex-direction: column;
            align-items: stretch;
            text-align: center;
        }

        .page-title {
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }

        .table thead th,
        .table tbody td {
            padding: 1rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.375rem;
        }

        .btn-action {
            justify-content: center;
            width: 100%;
        }

        .patient-info {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .patient-avatar {
            margin-right: 0;
            margin-bottom: 0.5rem;
        }

        }

        @@media (max-width: 640px) {
            .empty-state

        {
            padding: 3rem 1rem;
        }

        .empty-icon {
            font-size: 3rem;
        }

        .table-responsive {
            font-size: 0.875rem;
        }

        .table thead {
            display: none;
        }

        .table tbody td {
            display: block;
            padding: 0.75rem 1rem;
            border: none;
            position: relative;
            padding-left: 50%;
        }

            .table tbody td:before {
                content: attr(data-label);
                position: absolute;
                left: 1rem;
                width: 45%;
                padding-right: 10px;
                white-space: nowrap;
                font-weight: 600;
                color: #64748b;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        .table tbody tr {
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: block;
        }

        }

        /* Utility Classes */
        .d-flex {
            display: flex;
        }

        .justify-content-between {
            justify-content: space-between;
        }

        .align-items-center {
            align-items: center;
        }

        .mb-0 {
            margin-bottom: 0;
        }

        .me-3 {
            margin-right: 1rem;
        }

        .text-muted {
            color: #64748b;
        }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
}

<div class="patient-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2 class="page-title">Patient Management</h2>
        <a href="@Url.Action("Register")" class="btn-modern">
            <i class="bi bi-person-plus"></i> Register New Patient
        </a>
    </div>

    <!-- Success Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert" role="alert">
            <i class="bi bi-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    <!-- Main Content Card -->
    <div class="main-card">
        <div class="card-header">
            <h5 class="card-title">Registered Patients</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="empty-state">
                    <i class="bi bi-people empty-icon"></i>
                    <p class="empty-message">No patients registered yet</p>
                    <a href="@Url.Action("Register")" class="btn-modern">
                        <i class="bi bi-person-plus"></i> Register First Patient
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Registered</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model)
                            {
                                <tr>
                                    <td data-label="Patient">
                                        <div class="patient-info">
                                            <div class="patient-avatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div>
                                                <div class="patient-name">@patient.Name</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-label="Email">@patient.Email</td>
                                    <td data-label="Phone">@patient.PhoneNumber</td>
                                    <td data-label="Registered">
                                        <span class="text-muted">@patient.RegistrationDate.ToString("MMM dd, yyyy")</span>
                                    </td>
                                    <td data-label="Actions">
                                        <div class="action-buttons">
                                            <a href="@Url.Action("Details", new { id = patient.Id })" class="btn-action btn-view">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <button class="btn-action btn-edit">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn-action btn-delete">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        @if (Model.Any())
        {
            <div class="table-footer">
                <span>Showing @Model.Count patient(s)</span>
            </div>
        }
    </div>
</div>