@model dynamic
@{
    ViewData["Title"] = $"Patient Details - {Model.FullName}";

    // Helper function to safely get property values from dynamic objects
    string GetPropertyValue(dynamic obj, string propertyName)
    {
        try
        {
            var value = ((IDictionary<string, object>)obj).ContainsKey(propertyName)
                ? ((IDictionary<string, object>)obj)[propertyName]?.ToString()
                : null;
            return value;
        }
        catch
        {
            try
            {
                // Fallback: try reflection
                var type = obj.GetType();
                var property = type.GetProperty(propertyName);
                return property?.GetValue(obj)?.ToString();
            }
            catch
            {
                return null;
            }
        }
    }
}

@section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f8fafc;
            color: #1e293b;
            line-height: 1.6;
        }

        /* Main Container */
        .patient-details-container {
            width: 100%;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header Section */
        .page-header {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        .btn-modern {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            cursor: pointer;
        }

            .btn-modern:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                color: white;
                text-decoration: none;
            }

        .btn-outline {
            background: transparent;
            color: #64748b;
            border: 2px solid #e2e8f0;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

            .btn-outline:hover {
                background: #64748b;
                color: white;
                border-color: #64748b;
                text-decoration: none;
                transform: translateY(-1px);
            }

        .btn-edit {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
        }

            .btn-edit:hover {
                box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
            }

        /* Content Layout */
        .patient-content {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 2rem;
        }

        /* Patient Profile Card */
        .patient-profile {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            overflow: hidden;
            height: fit-content;
            position: sticky;
            top: 2rem;
        }

        .profile-header {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            text-align: center;
            padding: 2rem;
            position: relative;
        }

            .profile-header::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 0;
                border-left: 15px solid transparent;
                border-right: 15px solid transparent;
                border-top: 10px solid #764ba2;
            }

        .patient-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            border: 4px solid rgba(255, 255, 255, 0.3);
        }

            .patient-avatar i {
                font-size: 2.5rem;
            }

        .patient-name {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .patient-role {
            opacity: 0.9;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .patient-id {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            display: inline-block;
        }

        .profile-body {
            padding: 1.5rem;
        }

        .contact-section {
            margin-bottom: 1.5rem;
        }

        .contact-title {
            font-weight: 600;
            color: #374151;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .contact-item {
            margin-bottom: 1rem;
            padding: 0.75rem;
            background: #f8fafc;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }

        .contact-label {
            font-size: 0.75rem;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }

        .contact-value {
            font-weight: 600;
            color: #1e293b;
        }

        .contact-secondary {
            font-size: 0.875rem;
            color: #64748b;
            margin-top: 0.25rem;
        }

        /* Information Cards */
        .info-cards {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .info-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            overflow: hidden;
        }

        .card-header {
            background: #f8fafc;
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            position: relative;
        }

            .card-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(135deg, #667eea, #764ba2);
            }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1e293b;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .card-icon {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        /* Form Fields */
        .field-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

            .field-grid.single {
                grid-template-columns: 1fr;
            }

        .field-group {
            margin-bottom: 1.5rem;
        }

        .field-label {
            display: block;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .field-value {
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 0.875rem 1rem;
            color: #1e293b;
            font-size: 1rem;
            width: 100%;
            resize: none;
        }

            .field-value:focus {
                outline: none;
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        /* Empty State */
        .empty-value {
            color: #9ca3af;
            font-style: italic;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 1024px) {
            .patient-content

        {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .patient-profile {
            position: relative;
            top: auto;
        }

        }

        @@media (max-width: 768px) {
            .patient-details-container

        {
            padding: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            flex-direction: column;
            align-items: stretch;
        }

        .page-title {
            font-size: 1.75rem;
            margin-bottom: 1rem;
            text-align: center;
        }

        .action-buttons {
            justify-content: center;
        }

        .field-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .profile-header {
            padding: 1.5rem;
        }

        .patient-avatar {
            width: 80px;
            height: 80px;
        }

            .patient-avatar i {
                font-size: 2rem;
            }

        }

        @@media (max-width: 480px) {
            .patient-name

        {
            font-size: 1.25rem;
        }

        .card-title {
            font-size: 1.125rem;
        }

        }

        /* Utility Classes */
        .d-flex {
            display: flex;
        }

        .justify-content-between {
            justify-content: space-between;
        }

        .align-items-center {
            align-items: center;
        }

        .mb-0 {
            margin-bottom: 0;
        }

        .gap-2 {
            gap: 0.5rem;
        }
    </style>
}

<div class="patient-details-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2 class="page-title">Patient Details</h2>
        <div class="action-buttons">
            <a href="@Url.Action("Index")" class="btn-outline">
                <i class="bi bi-arrow-left"></i> Back to Patients
            </a>
            <button class="btn-modern btn-edit">
                <i class="bi bi-pencil"></i> Edit Patient
            </button>
        </div>
    </div>

    <!-- Content Layout -->
    <div class="patient-content">
        <!-- Patient Profile Sidebar -->
        <div class="patient-profile">
            <div class="profile-header">
                <div class="patient-avatar">
                    <i class="bi bi-person"></i>
                </div>
                <div class="patient-name">@Model.FullName</div>
                <div class="patient-role">Patient</div>
                <div class="patient-id">ID: @Model.Id</div>
            </div>

            <div class="profile-body">
                <div class="contact-section">
                    <h6 class="contact-title">
                        <i class="bi bi-telephone"></i> Contact Information
                    </h6>

                    <div class="contact-item">
                        <div class="contact-label">Email Address</div>
                        <div class="contact-value">@Model.Email</div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-label">Phone Number</div>
                        <div class="contact-value">@Model.PhoneNumber</div>
                    </div>

                    @if (!string.IsNullOrEmpty(GetPropertyValue(Model, "EmergencyContactName")))
                    {
                        <div class="contact-item">
                            <div class="contact-label">Emergency Contact</div>
                            <div class="contact-value">@GetPropertyValue(Model, "EmergencyContactName")</div>
                            <div class="contact-secondary">@GetPropertyValue(Model, "EmergencyContactPhone")</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Information Cards -->
        <div class="info-cards">
            <!-- Personal Information Card -->
            <div class="info-card">
                <div class="card-header">
                    <h5 class="card-title">
                        <div class="card-icon"><i class="bi bi-person-circle"></i></div>
                        Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="field-grid">
                        <div class="field-group">
                            <label class="field-label">First Name</label>
                            <input type="text" class="field-value" value="@Model.FirstName" readonly />
                        </div>
                        <div class="field-group">
                            <label class="field-label">Last Name</label>
                            <input type="text" class="field-value" value="@Model.LastName" readonly />
                        </div>
                    </div>

                    <div class="field-grid">
                        <div class="field-group">
                            <label class="field-label">Date of Birth</label>
                            <input type="text" class="field-value" value="@Model.DateOfBirth" readonly />
                        </div>
                        <div class="field-group">
                            <label class="field-label">Gender</label>
                            <input type="text" class="field-value" value="@Model.Gender" readonly />
                        </div>
                    </div>

                    <div class="field-group">
                        <label class="field-label">Address</label>
                        <input type="text" class="field-value" value="@Model.Address" readonly />
                    </div>

                    <div class="field-grid">
                        <div class="field-group">
                            <label class="field-label">City</label>
                            <input type="text" class="field-value" value="@Model.City" readonly />
                        </div>
                        <div class="field-group">
                            <label class="field-label">Postal Code</label>
                            <input type="text" class="field-value" value="@Model.PostalCode" readonly />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Insurance Information Card -->
            <div class="info-card">
                <div class="card-header">
                    <h5 class="card-title">
                        <div class="card-icon"><i class="bi bi-shield-check"></i></div>
                        Insurance Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="field-grid">
                        <div class="field-group">
                            <label class="field-label">Insurance Number</label>
                            <input type="text" class="field-value"
                                   value="@(GetPropertyValue(Model, "InsuranceNumber") ?? "Not provided")" readonly />
                        </div>
                        <div class="field-group">
                            <label class="field-label">Insurance Provider</label>
                            <input type="text" class="field-value"
                                   value="@(GetPropertyValue(Model, "InsuranceProvider") ?? "Not provided")" readonly />
                        </div>
                    </div>

                    <div class="field-group">
                        <label class="field-label">Primary Care Physician</label>
                        <input type="text" class="field-value"
                               value="@(GetPropertyValue(Model, "PrimaryCarePhysician") ?? "Not specified")" readonly />
                    </div>
                </div>
            </div>

            <!-- Medical Information Card -->
            <div class="info-card">
                <div class="card-header">
                    <h5 class="card-title">
                        <div class="card-icon"><i class="bi bi-heart-pulse"></i></div>
                        Medical Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="field-group">
                        <label class="field-label">Known Allergies</label>
                        <textarea class="field-value" rows="3" readonly>@(GetPropertyValue(Model, "Allergies") ?? "None reported")</textarea>
                    </div>

                    <div class="field-group">
                        <label class="field-label">Medical History</label>
                        <textarea class="field-value" rows="4" readonly>@(GetPropertyValue(Model, "MedicalHistory") ?? "No medical history provided")</textarea>
                    </div>

                    <div class="field-group">
                        <label class="field-label">Current Medications</label>
                        <textarea class="field-value" rows="3" readonly>@(GetPropertyValue(Model, "CurrentMedications") ?? "No current medications")</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>