@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.AppointmentListItem>
@{
    ViewData["Title"] = "Appointment Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Appointment Management</h2>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-calendar-plus"></i> Schedule Appointment
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Appointments</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No appointments scheduled.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="bi bi-calendar-plus"></i> Schedule First Appointment
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Patient</th>
                                        <th>Doctor</th>
                                        <th>Type</th>
                                        <th>Date & Time</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 32px; height: 32px;">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@appointment.PatientName</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@appointment.DoctorName</td>
                                            <td>
                                                <span class="badge bg-info">@appointment.AppointmentType</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</strong><br>
                                                    <small class="text-muted">@appointment.AppointmentTime.ToString(@"hh\:mm")</small>
                                                </div>
                                            </td>
                                            <td>@appointment.Location</td>
                                            <td>
                                                @if (appointment.Status == "Booked")
                                                {
                                                    <span class="badge bg-success">@appointment.Status</span>
                                                }
                                                else if (appointment.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@appointment.Status</span>
                                                }
                                                else if (appointment.Status == "Completed")
                                                {
                                                    <span class="badge bg-primary">@appointment.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@appointment.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.Price.HasValue)
                                                {
                                                    <span class="text-success">@appointment.Price.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not set</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-info">
                                                        <i class="bi bi-eye"></i> View
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                Showing @Model.Count appointment(s)
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 