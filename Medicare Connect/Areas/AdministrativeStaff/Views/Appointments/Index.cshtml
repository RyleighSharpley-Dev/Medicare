@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.AppointmentListItem>
@{
    ViewData["Title"] = "Appointment Management";
}

@section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f8fafc;
            color: #1e293b;
            line-height: 1.6;
        }

        /* Main Container */
        .appointments-container {
            width: 100%;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header Section */
        .page-header {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Modern Buttons */
        .btn-modern {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 0.875rem 1.75rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            cursor: pointer;
        }

            .btn-modern:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                color: white;
                text-decoration: none;
            }

        .btn-action {
            padding: 0.5rem 0.875rem;
            border-radius: 8px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            transition: all 0.2s ease;
            font-size: 0.8rem;
            border: 1px solid transparent;
        }

        .btn-view {
            background: #f0f9ff;
            color: #0369a1;
            border-color: #e0f2fe;
        }

            .btn-view:hover {
                background: #0369a1;
                color: white;
                text-decoration: none;
                transform: translateY(-1px);
            }

        .btn-edit {
            background: #fefce8;
            color: #a16207;
            border-color: #fef3c7;
        }

            .btn-edit:hover {
                background: #a16207;
                color: white;
                text-decoration: none;
                transform: translateY(-1px);
            }

        .btn-cancel {
            background: #fef2f2;
            color: #dc2626;
            border-color: #fecaca;
        }

            .btn-cancel:hover {
                background: #dc2626;
                color: white;
                text-decoration: none;
                transform: translateY(-1px);
            }

        /* Alert Styles */
        .alert {
            background: #dcfce7;
            border: 1px solid #bbf7d0;
            color: #166534;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .alert i {
                font-size: 1.25rem;
            }

            .alert .btn-close {
                background: none;
                border: none;
                color: #166534;
                opacity: 0.7;
                cursor: pointer;
                padding: 0;
                margin-left: auto;
            }

                .alert .btn-close:hover {
                    opacity: 1;
                }

        /* Main Card */
        .main-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            overflow: hidden;
        }

        .card-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            background: #f8fafc;
            position: relative;
        }

            .card-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(135deg, #667eea, #764ba2);
            }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1e293b;
            margin: 0;
        }

        .card-body {
            padding: 0;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-icon {
            font-size: 4rem;
            color: #cbd5e1;
            margin-bottom: 1.5rem;
            display: block;
        }

        .empty-message {
            font-size: 1.125rem;
            margin-bottom: 2rem;
            color: #64748b;
        }

        /* Appointments Table */
        .table {
            margin: 0;
            width: 100%;
        }

            .table thead {
                background: #f8fafc;
            }

                .table thead th {
                    padding: 1.25rem 1rem;
                    font-weight: 600;
                    color: #475569;
                    font-size: 0.875rem;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    border: none;
                    border-bottom: 1px solid #e2e8f0;
                }

            .table tbody td {
                padding: 1.25rem 1rem;
                color: #1e293b;
                border-top: 1px solid #e2e8f0;
                vertical-align: middle;
            }

            .table tbody tr:hover {
                background: #f8fafc;
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

        /* Patient Info */
        .patient-info {
            display: flex;
            align-items: center;
        }

        .patient-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            flex-shrink: 0;
            font-size: 0.875rem;
        }

        .patient-name {
            font-weight: 600;
            color: #1e293b;
        }

        /* Status Badges */
        .status-badge {
            padding: 0.375rem 0.75rem;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-block;
        }

        .badge-booked {
            background: #dcfce7;
            color: #166534;
        }

        .badge-cancelled {
            background: #fef2f2;
            color: #dc2626;
        }

        .badge-completed {
            background: #dbeafe;
            color: #1e40af;
        }

        .badge-pending {
            background: #f1f5f9;
            color: #475569;
        }

        .badge-info {
            background: #e0f2fe;
            color: #0369a1;
        }

        /* Appointment Type */
        .appointment-type {
            background: #f0f9ff;
            color: #0369a1;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        /* Date Time Display */
        .datetime-info {
            line-height: 1.4;
        }

        .date-main {
            font-weight: 600;
            color: #1e293b;
        }

        .time-sub {
            color: #64748b;
            font-size: 0.875rem;
        }

        /* Price Display */
        .price-value {
            color: #059669;
            font-weight: 600;
        }

        .price-none {
            color: #9ca3af;
            font-style: italic;
        }

        /* Action Buttons Group */
        .action-buttons {
            display: flex;
            gap: 0.375rem;
            flex-wrap: wrap;
        }

        /* Footer Info */
        .table-footer {
            padding: 1rem 1.5rem;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
            color: #64748b;
            font-size: 0.875rem;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 1024px) {
            .appointments-container

        {
            padding: 1.5rem;
        }

        }

        @@media (max-width: 768px) {
            .appointments-container

        {
            padding: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            flex-direction: column;
            align-items: stretch;
            text-align: center;
        }

        .page-title {
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }

        .table thead th,
        .table tbody td {
            padding: 1rem 0.75rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }

        .btn-action {
            justify-content: center;
            width: 100%;
            font-size: 0.75rem;
        }

        .patient-info {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .patient-avatar {
            margin-right: 0;
        }

        }

        @@media (max-width: 640px) {
            .empty-state

        {
            padding: 3rem 1rem;
        }

        .empty-icon {
            font-size: 3rem;
        }

        .table-responsive {
            font-size: 0.875rem;
        }

        .table thead {
            display: none;
        }

        .table tbody td {
            display: block;
            padding: 0.75rem 1rem;
            border: none;
            position: relative;
            padding-left: 40%;
        }

            .table tbody td:before {
                content: attr(data-label);
                position: absolute;
                left: 1rem;
                width: 35%;
                padding-right: 10px;
                white-space: nowrap;
                font-weight: 600;
                color: #64748b;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        .table tbody tr {
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: block;
        }

        }

        /* Utility Classes */
        .d-flex {
            display: flex;
        }

        .justify-content-between {
            justify-content: space-between;
        }

        .align-items-center {
            align-items: center;
        }

        .mb-0 {
            margin-bottom: 0;
        }

        .text-muted {
            color: #64748b;
        }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
}

<div class="appointments-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2 class="page-title">Appointment Management</h2>
        <a href="@Url.Action("Create")" class="btn-modern">
            <i class="bi bi-calendar-plus"></i> Schedule Appointment
        </a>
    </div>

    <!-- Success Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert" role="alert">
            <i class="bi bi-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    <!-- Main Content Card -->
    <div class="main-card">
        <div class="card-header">
            <h5 class="card-title">Scheduled Appointments</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="empty-state">
                    <i class="bi bi-calendar-x empty-icon"></i>
                    <p class="empty-message">No appointments scheduled yet</p>
                    <a href="@Url.Action("Create")" class="btn-modern">
                        <i class="bi bi-calendar-plus"></i> Schedule First Appointment
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Type</th>
                                <th>Date & Time</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td data-label="Patient">
                                        <div class="patient-info">
                                            <div class="patient-avatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div class="patient-name">@appointment.PatientName</div>
                                        </div>
                                    </td>
                                    <td data-label="Doctor">@appointment.DoctorName</td>
                                    <td data-label="Type">
                                        <span class="appointment-type">@appointment.AppointmentType</span>
                                    </td>
                                    <td data-label="Date & Time">
                                        <div class="datetime-info">
                                            <div class="date-main">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                            <div class="time-sub">@appointment.AppointmentTime.ToString(@"hh\:mm")</div>
                                        </div>
                                    </td>
                                    <td data-label="Location">@appointment.Location</td>
                                    <td data-label="Status">
                                        @if (appointment.Status == "Booked")
                                        {
                                            <span class="status-badge badge-booked">@appointment.Status</span>
                                        }
                                        else if (appointment.Status == "Cancelled")
                                        {
                                            <span class="status-badge badge-cancelled">@appointment.Status</span>
                                        }
                                        else if (appointment.Status == "Completed")
                                        {
                                            <span class="status-badge badge-completed">@appointment.Status</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge badge-pending">@appointment.Status</span>
                                        }
                                    </td>
                                    <td data-label="Price">
                                        @if (appointment.Price.HasValue)
                                        {
                                            <span class="price-value">@appointment.Price.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</span>
                                        }
                                        else
                                        {
                                            <span class="price-none">Not set</span>
                                        }
                                    </td>
                                    <td data-label="Actions">
                                        <div class="action-buttons">
                                            <button class="btn-action btn-view">
                                                <i class="bi bi-eye"></i> View
                                            </button>
                                            <button class="btn-action btn-edit">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn-action btn-cancel">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        @if (Model.Any())
        {
            <div class="table-footer">
                Showing @Model.Count appointment(s)
            </div>
        }
    </div>
</div>