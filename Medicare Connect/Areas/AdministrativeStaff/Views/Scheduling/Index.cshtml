@model List<Medicare_Connect.Areas.AdministrativeStaff.Models.StaffScheduleListItem>
@{
    ViewData["Title"] = "Staff Scheduling";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Staff Scheduling</h2>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="bi bi-calendar-plus"></i> Create Schedule
                    </a>
                    <a href="@Url.Action("LeaveRequests")" class="btn btn-outline-info">
                        <i class="bi bi-calendar-x"></i> Leave Requests
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Staff Schedules</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No staff schedules found.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="bi bi-calendar-plus"></i> Create First Schedule
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Staff Member</th>
                                        <th>Department</th>
                                        <th>Shift Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var schedule in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 32px; height: 32px;">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@schedule.StaffName</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@schedule.Department</span>
                                            </td>
                                            <td>
                                                @if (schedule.ShiftType == "Day Shift")
                                                {
                                                    <span class="badge bg-success">@schedule.ShiftType</span>
                                                }
                                                else if (schedule.ShiftType == "Night Shift")
                                                {
                                                    <span class="badge bg-dark">@schedule.ShiftType</span>
                                                }
                                                else if (schedule.ShiftType == "Evening Shift")
                                                {
                                                    <span class="badge bg-warning">@schedule.ShiftType</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@schedule.ShiftType</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-muted">@schedule.StartDate.ToString("MMM dd, yyyy")</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@schedule.EndDate.ToString("MMM dd, yyyy")</span>
                                            </td>
                                            <td>
                                                <span class="text-primary">@schedule.StartTime.ToString(@"hh\:mm")</span>
                                            </td>
                                            <td>
                                                <span class="text-primary">@schedule.EndTime.ToString(@"hh\:mm")</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@schedule.Status</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-info">
                                                        <i class="bi bi-eye"></i> View
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                Showing @Model.Count schedule(s)
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 